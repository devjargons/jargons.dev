---
import BaseLayout from "../layouts/base.astro";
---

<BaseLayout pageTitle="Dictionry">
	<main class="flex flex-col max-w-screen-lg p-5 justify-center mx-auto min-h-screen space-y-4 md:space-y-6">
		<h1 class="text-4xl md:text-7xl font-black">Dictionry</h1>
		
		<!-- Search Form -->
		<div class="relative flex items-center mt-2 border p-2 md:pl-4 md:pr-3 md:py-2.5 space-x-2 border-gray-400 rounded-lg hover:shadow">
			<div class="text-gray-400">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
				</svg>
			</div>				
			<input 
				type="text" 
				placeholder="Search words"
				class="block w-full text-gray-600 focus:outline-none text-base md:text-lg"
			/>
			<kbd class="text-gray-600 rounded-md px-4 py-2 border bg-gray-400/20">CTRL+K</kbd>
		</div>

		<!-- Recent Word Look Up -->
		<div class="space-y-2">
			<h2 class="text-2xl md:text-4xl font-black">Recent</h2>
			<ol class="space-y-1 underline">
				<li>Tuple</li>
				<li>Boolean</li>
				<li>Concatenate</li>
				<li>Hydration</li>
			</ol>
		</div>
	</main>
</BaseLayout>
